@model List<FitnessCenterManagement.Models.Entities.Trainer>

<h2>Trainer Listesi</h2>

<!-- ❗ Silinemeyen trainer için hata mesajı -->
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<a class="btn btn-primary mb-3" asp-action="Create">Yeni Trainer Ekle</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Uzmanlıklar</th>
            <th>Durum</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.FirstName</td>
                <td>@t.LastName</td>
                <td>@t.Specializations</td>
                <td>@(t.IsActive ? "Aktif" : "Pasif")</td>
                <td>@t.Gym?.Name</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@t.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-controller="TrainerAvailability"
                       asp-action="Index"
                       asp-route-trainerId="@t.Id"
                       class="btn btn-info btn-sm">
                        Müsaitlik Yönet
                    </a>

                    <a asp-action="Delete" asp-route-id="@t.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
