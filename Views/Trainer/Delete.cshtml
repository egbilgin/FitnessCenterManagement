@model FitnessCenterManagement.Models.Entities.Trainer

<h2>Eğitmen Sil</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

<div class="card p-3 mb-3">
    <h4>@Model.FirstName @Model.LastName</h4>
    <p><strong>Uzmanlık:</strong> @Model.Specializations</p>
</div>

<p>Bu eğitmen mevcut randevulara bağlı olduğu için <strong>silinemez</strong>.</p>

<a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
