@model FitnessCenterManagement.Models.Entities.Trainer

<h2>Yeni Eğitmen Ekle</h2>

<form asp-action="Create" method="post">

    <div class="mb-3">
        <label class="form-label">Salon</label>
        <select asp-for="GymId" class="form-select" asp-items="ViewBag.Gyms"></select>
    </div>

    <div class="mb-3">
        <label>Ad</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Soyad</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Uzmanlıklar</label>
        <input asp-for="Specializations" class="form-control" />
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsActive" type="checkbox" class="form-check-input" />
        <label class="form-check-label">Aktif mi?</label>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
</form>

