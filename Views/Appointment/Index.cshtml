@using FitnessCenterManagement.Models.Enums

@model List<FitnessCenterManagement.Models.Entities.Appointment>

<h2>Randevular</h2>

<table border="1" cellpadding="5">
    <thead>
        <tr>
            <th>Üye</th>
            <th>Antrenör</th>
            <th>Hizmet</th>
            <th>Başlangıç</th>
            <th>Bitiş</th>
            <th>Durum</th>
            <th>Fiyat</th>
            <th>Durum</th>
            <th>İşlemler</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.Member.FirstName @a.Member.LastName</td>
                <td>@a.Trainer.FirstName @a.Trainer.LastName</td>
                <td>@a.ServiceType.Name</td>
                <td>@a.StartDateTime.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@a.EndDateTime.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@a.Status</td>
                <td>@a.Price ₺</td>
                <td>
                    @if (a.Status == AppointmentStatus.Pending)
                    {
                        <span class="badge bg-warning">Beklemede</span>
                    }
                    else if (a.Status == AppointmentStatus.Approved)
                    {
                        <span class="badge bg-success">Onaylandı</span>
                    }
                    else if (a.Status == AppointmentStatus.Cancelled)
                    {
                        <span class="badge bg-danger">İptal</span>
                    }
                </td>

                <td>
                    @if (User.IsInRole("Admin") && a.Status == AppointmentStatus.Pending)
                    {
                        <a asp-action="Approve"
                           asp-route-id="@a.Id"
                           class="btn btn-success btn-sm me-1">
                            Onayla
                        </a>

                        <a asp-action="Reject"
                           asp-route-id="@a.Id"
                           class="btn btn-danger btn-sm">
                            Reddet
                        </a>
                    }
                </td>


            </tr>
        }
    </tbody>
</table>

<br />

<a asp-action="Create">Yeni Randevu Oluştur</a>
