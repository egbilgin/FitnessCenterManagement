@model FitnessCenterManagement.Models.Entities.ServiceType

<h2>Hizmeti Düzenle</h2>

<form asp-action="Edit" method="post">

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="GymId" />

    <div class="mb-3">
        <label class="form-label">Hizmet Adı</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Açıklama</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Süre (dk)</label>
        <input asp-for="DurationMinutes" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Fiyat (₺)</label>
        <input asp-for="Price" class="form-control" />
    </div>

    <button class="btn btn-success">Güncelle</button>
</form>
