@model List<FitnessCenterManagement.Models.Entities.ServiceType>

<h2>Hizmet Türleri</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<a class="btn btn-primary mb-3" asp-action="Create">Yeni Hizmet Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Hizmet</th>
            <th>Salon</th>
            <th>Süre</th>
            <th>Fiyat</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Name</td>
                <td>@s.Gym?.Name</td>
                <td>@s.DurationMinutes dk</td>
                <td>@s.Price ₺</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
